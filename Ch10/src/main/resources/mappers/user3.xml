<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ch10.mapper.User3Mapper">
  	<insert id="insertUser3">
		INSERT INTO USER3 VALUES (#{id}, #{name}, #{hp}, #{age})
	</insert>
	<select id="selectUser3" resultType="kr.ch10.dto.User3DTO">
		SELECT * FROM USER3 WHERE id=#{id}
	</select>
	<select id="selectUser3s" resultType="kr.ch10.dto.User3DTO">
		SELECT * FROM USER3
	</select>
	<update id="updateUser3">
		UPDATE USER3 SET
			name=#{name},
			hp=#{hp},
			age=#{age}
		WHERE
			id=#{id}	
	</update>
	<delete id="deleteUser3">
		DELETE FROM USER3 WHERE id=#{id}
	</delete>
</mapper>